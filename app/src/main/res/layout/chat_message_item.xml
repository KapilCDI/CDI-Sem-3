<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Profile picture for the sender -->
    <ImageView
        android:id="@+id/senderDp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:src="@drawable/sender_dp"
        android:visibility="gone" />

    <!-- Profile picture for the receiver -->
    <ImageView
        android:id="@+id/receiverDp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:src="@drawable/recieve_dp"
        android:visibility="gone" />

    <!-- Message text -->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/senderDp"
        android:layout_toStartOf="@id/receiverDp"
        android:padding="8dp"
        android:text="Message"
        android:textSize="16sp" />

    <!-- Timestamp -->
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/messageText"
        android:layout_toEndOf="@id/senderDp"
        android:layout_toStartOf="@id/receiverDp"
        android:text="Time"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray" />
</RelativeLayout>